<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/error_layout_main"
    android:background="@color/window_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/error_layout_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/pagefailed_bg"
                android:visibility="gone"/>


            <ProgressBar
                android:id="@+id/error_layout_animProgress"
                android:layout_width="79.0dip"
                android:layout_height="79.0dip"
                android:background="@drawable/loadingpage_bg"
                android:indeterminateDrawable="@drawable/animdraw"
                android:indeterminateDuration="1500"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/error_layout_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10.0dip"
                android:lines="2"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:text="@string/empty_view_click_to_refresh"
                android:textSize="@dimen/text_size"/>


        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>